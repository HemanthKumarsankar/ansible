- name: install ansible
  become: yes
  hosts: local
  connection: local
  tasks:
  - name: print the stats
    ansible.builtin.debug:
      msg: "{{ ansible_facts }}"   #ansible tooks automatic as automatic variable
  
  - name: install ansible if redhat
    ansible.builtin.dnf:
      name: ansible
      state: present
    when: ansible_os_family == "RedHat"

  - name: install ansible if Debian
    ansible.builtin.apt:
      name: ansible
      state: present
    when: ansible_os_family == "Debian"